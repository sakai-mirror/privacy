<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>

<!-- add to allow internalization of the content messages -->
  <application>
    <message-bundle>org.sakaiproject.tool.privacy.bundle.Messages</message-bundle>
    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>de</supported-locale>
      <supported-locale>fr</supported-locale>
      <supported-locale>es</supported-locale>
    </locale-config>
  </application>
    
  <!-- let the framework deal with the beans -->
  <managed-bean>
    <description>privacyBean - for tool page management</description>
    <managed-bean-name>privacyBean</managed-bean-name>
    <managed-bean-class>org.sakaiproject.tool.privacy.PrivacyBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
    
    <managed-property>
		<description>Privacy Manager</description>
		<property-name>privacyManager</property-name>
		<value>#{Components["org.sakaiproject.api.privacy.PrivacyManager"]}</value>
	 </managed-property>
	 
   </managed-bean>

  
	<!-- navigation
			FROM what page TO what page
			IUPUI: path needs to be /projname/xx.jsp -->
	<navigation-rule>
	    <navigation-case>  <!-- GOTO podMain (Podcast Home) -->
	      <from-outcome>main</from-outcome>
	      <to-view-id>/jsp/main.jsp</to-view-id>
	      <redirect />
	    </navigation-case>
	</navigation-rule>
	
</faces-config>